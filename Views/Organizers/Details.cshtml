@model VU.Models.Organizer

@{
    ViewBag.Title = "Organizer Details";
}


<div class="upper-content">
    <h4 class="my-header">Organizer Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Organizer Name")
            @*@Html.DisplayNameFor(model => model.OrganizerName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerName)
        </dd>

        <dt>
            @Html.DisplayName("Contact Person")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerEmail)
        </dd>

        <dt>
            @Html.DisplayName("Phone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerPhone)
        </dd>

        <dt>
            @Html.DisplayName("Address")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrganizerAddress)
        </dd>

    </dl>
</div>
<br/>
<p>
    
    <a href="@Url.Action("Edit", "Organizers" , new { id = Model.OrganizerID })" title="Edit" class="links my-edit">
        <img alt="Edit" src="@Url.Content("../../image/edit.png")">
        Edit
    </a> |
    @Html.ActionLink("Back to Organizer(s) List", "Index")
</p>
<div class="lower-content">
    @if (Model.Events != null && Model.Events.Any())
    {
        <h4 class="my-header">Organized Event(s) Information</h4>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Event Name")
                    @*@Html.DisplayNameFor(model => model.OrganizerName)*@
                </th>
                <th>
                    @Html.DisplayName("Event Location")
                </th>
                <th>
                    @Html.DisplayName("Event Date")
                </th>
                <th>
                    @Html.DisplayName("Start Time")
                </th>
                <th>
                    @Html.DisplayName("End Time")
                </th>
            </tr>

            @foreach (var item in Model.Events)
            {
                <tr>
                    <td class="tdata">
					<a href="@Url.Action("Details", "Events" , new { id = item.EventID })" title="View Event Details" class="links">
					<img alt="View" src="@Url.Content("../../image/event_d.png")">
                        @Html.DisplayFor(modelItem => item.EventName)
						</a>
                    </td>
                    <td class="tdata">
                        @Html.DisplayFor(modelItem => item.EventLocation)
                    </td>
                    <td class="tdata">
                        @Html.DisplayFor(modelItem => item.EventDate)
                    </td>
                    <td class="tdata">
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td class="tdata">
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <h3 align="center">Currently, there are no events for this Organizer.</h3>
        <p align="center">Click on Add Event to create new events.</p>
        <a align="center" href="@Url.Action("Create", "Events")" title="Add Event" class="links">
            <img alt="Add Event" src="@Url.Content("../../image/event.png")">
            Add Event
        </a>
    }
</div>
