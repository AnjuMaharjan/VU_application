@model IEnumerable<VU.Models.Organizer>

@{
    ViewBag.Title = "Organizer";
}
    <div class="upper-content">
        <p>
            <a href="@Url.Action("Create", "Organizers")" title="Add Organizer" class="links">
                <img alt="Create Organizers" src="@Url.Content("../../image/organizer.png")" class="my-image">
                <b>Add Organizer</b>
            </a>
        </p>

        @if (Model != null && Model.Any())
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.ActionLink("Organizer Name", "Index", new { sortOrder = ViewBag.OrganizerNameSort })
                    </th>
                    <th>
                        @Html.ActionLink("Contact Person", "Index", new { sortOrder = ViewBag.ContactPersonSort })
                    </th>
                    <th>
                        @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.EmailSort })
                    </th>
                    <th>
                        @Html.DisplayName("Phone")
                    </th>
                    <th>
                        @Html.DisplayName("Address")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="tdata">
                            @Html.DisplayFor(modelItem => item.OrganizerName)
                        </td>
                        <td class="tdata">
                            @Html.DisplayFor(modelItem => item.ContactPerson)
                        </td>
                        <td class="tdata">
                            @Html.DisplayFor(modelItem => item.OrganizerEmail)
                        </td>
                        <td class="tdata">
                            @Html.DisplayFor(modelItem => item.OrganizerPhone)
                        </td>
                        <td class="tdata">
                            @Html.DisplayFor(modelItem => item.OrganizerAddress)
                        </td>
                        <td class="manipulate">
                            <a href="@Url.Action("Edit", "Organizers" , new { id = item.OrganizerID })" title="Edit" class="links">
                                <img alt="Edit" src="@Url.Content("../../image/edit.png")">
                                Edit
                            </a> |
                            <a href="@Url.Action("Details", "Organizers" , new { id = item.OrganizerID })" title="Details" class="links">
                                <img alt="Details" src="@Url.Content("../../image/details.png")">
                                Details
                            </a> |
                            <a href="@Url.Action("Delete", "Organizers" , new { id = item.OrganizerID })" title="Delete" class="links">
                                <img alt="Delete" src="@Url.Content("../../image/delete.png")">
                                Delete
                            </a>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.OrganizerID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.OrganizerID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.OrganizerID })*@
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <h2 align="center">Oops..!! There are no Organizers!!</h2>
        }
    </div>

