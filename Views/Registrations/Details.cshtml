@model VU.Models.Registration

@{
    ViewBag.Title = "Registration Details";
}

<div>
    <h4>Registration Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Registration ID")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RegistrationID)
        </dd>
        <dt>
            @Html.DisplayName("Organizer Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.Organizer.OrganizerName)
        </dd>
        <dt>
            @Html.DisplayName("Event Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt>
            @Html.DisplayName("Event Location")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.EventLocation)
        </dd>
        <dt>
            @Html.DisplayName("Event Date")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.EventDate)
        </dd>
        <dt>
            @Html.DisplayName("Start Time")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.StartTime)
        </dd>
        <dt>
            @Html.DisplayName("End Time")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Event.EndTime)
        </dd>
        <dt>
            @* @Html.DisplayNameFor(model => model.Attendee.AttendeeFirstName)*@
            @Html.DisplayName("Attendee Full Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeeFirstName) @Html.DisplayFor(model => model.Attendee.AttendeeLastName)
        </dd>
        <dt>
            @Html.DisplayName("Attendee Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeeEmail)
        </dd>
        <dt>
            @Html.DisplayName("Attendee Phone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeePhone)
        </dd>
        <dt>
            @Html.DisplayName("Attendee Address")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeeAddress)
        </dd>
        <dt>
            @Html.DisplayName("Registration Fee")
        </dt>

        <dd>
            $ @Html.DisplayFor(model => model.RegistrationFee)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", "Registrations" , new { id = Model.RegistrationID })" title="Edit" class="links">
        <img alt="Edit" src="@Url.Content("../../image/edit.png")">
        Edit
    </a> |
    @Html.ActionLink("Back to Registration(s) List", "Index")
</p>
