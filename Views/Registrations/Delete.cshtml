@model VU.Models.Registration

@{
    ViewBag.Title = "Delete";
}

<div class="upper-content">
    <h4 class="my-header">Registration Details:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Attendee.AttendeeName)*@
          @Html.DisplayName("Attendee Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeeFirstName)
        </dd>

        <dt>
            @Html.DisplayName("Event Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>

        <dt>
            @Html.DisplayName("Registration Fee")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegistrationFee)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Cancel" class="btn btn-default-cancel" onclick="location.href='@Url.Action("Index","Registrations")';"/>
            <input type="submit" value="Delete" class="btn btn-default-delete" />
        </div>
    }
</div>
