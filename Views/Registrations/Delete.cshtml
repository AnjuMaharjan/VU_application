@model VU.Models.Registration

@{
    ViewBag.Title = "Delete";
}

<div>
    <h4>Registration Details:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.Attendee.AttendeeName)*@
          @Html.DisplayName("Attendee Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Attendee.AttendeeFirstName)
        </dd>

        <dt>
            @Html.DisplayName("Event Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>

        <dt>
            @Html.DisplayName("Registration Fee")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegistrationFee)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
