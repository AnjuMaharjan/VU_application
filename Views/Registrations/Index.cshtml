@model IEnumerable<VU.Models.Registration>

@{
    ViewBag.Title = "Registration";
}

<p>
    <a href="@Url.Action("Create", "Registrations")" title="Add Registration" class="links">
        <img alt="Add Registration" src="@Url.Content("../../image/registration.jpg")">
         Add Registration
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Event Name")
            
        </th>
        <th>
            @* @Html.DisplayNameFor(model => model.Attendee.AttendeeName)*@
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Registration Fee")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Event.EventName)
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attendee.AttendeeFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationFee)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Registrations" , new { id = item.RegistrationID })" title="Edit" class="links">
                <img alt="Edit" src="@Url.Content("../../image/edit.png")">
                Edit
            </a> |
            <a href="@Url.Action("Details", "Registrations" , new { id = item.RegistrationID })" title="Details" class="links">
                <img alt="Details" src="@Url.Content("../../image/details.png")">
                Details
            </a> |
            <a href="@Url.Action("Delete", "Registrations" , new { id = item.RegistrationID })" title="Delete" class="links">
                <img alt="Delete" src="@Url.Content("../../image/delete.png")">
                Delete
            </a>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.RegistrationID }) |
            @Html.ActionLink("Details", "Details", new { id = item.RegistrationID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.RegistrationID })*@
        </td>
    </tr>
}

</table>
