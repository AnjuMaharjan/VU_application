@model VU.Models.Attendee

@{
    ViewBag.Title = "Delete";
}

<div class="upper-content">
    <h4 class="my-header">Attendee Details:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.AttendeeFirstName)*@
            @Html.DisplayName("First Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendeeFirstName)
        </dd>

        <dt>
            @Html.DisplayName("Last Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendeeLastName)
        </dd>

        <dt>
            @Html.DisplayName("Phone")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendeePhone)
        </dd>

        <dt>
            @Html.DisplayName("Address")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendeeAddress)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttendeeEmail)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Cancel" class="btn btn-default-cancel" onclick="location.href='@Url.Action("Index","Attendees")';"/>
            <input type="submit" value="Delete" class="btn btn-default-delete" />
        </div>
    }
</div>
